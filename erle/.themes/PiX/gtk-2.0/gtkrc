#widget_class "*<GtkNotebook>*<GtkScrolledWindow>*<GtkViewport>"  style "notebook_viewport"
widget_class "*<GtkEntry>"                   style "entry"
widget_class "*<GtkSpinButton>"                   style "spinbutton"

